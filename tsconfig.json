{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2023",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
